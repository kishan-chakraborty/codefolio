---
import Header from '../../../components/Header.astro';
import Sidebar from '../../../components/Sidebar.astro';

// Import all markdown files under this directory
const modules = import.meta.glob('./*.md', { eager: true });
const posts = Object.entries(modules).map(([path, mod]) => {
  const m: any = mod as any;
  const slug = path.replace('./', '').replace(/\.(md|mdx)$/, '');
  return {
    url: `/blog/Paper Summary/${slug}`,
    title: m?.frontmatter?.title ?? '',
    date: m?.frontmatter?.date,
  };
}).sort((a, b) => new Date(b.date || 0).getTime() - new Date(a.date || 0).getTime());
---

<!DOCTYPE html>
<html>
  <Header title="Let's summarize | Kishan Chakraborty" />
  <body>
    <div class="content">
      <Sidebar selectedItem="blog" />
      <nav class="main">
        <div class="container">
          <div class="back-nav-container">
            <a href="/blog/" class="back-nav-button w-inline-block">
              <img src="/assets/back.svg" alt="" class="back-nav-img" loading="lazy" />
              <div>Back</div>
            </a>
          </div>
          <div class="content-container">
            <h1>Reinforcement Learning Blog</h1>
            <section class="items-container">
              <div class="resouce-items">
                {posts.map((post) => (
                  <div class="single-item">
                    <h3><a href={post.url}>{post.title}</a></h3>
                    {post.date && <p>{post.date}</p>}
                  </div>
                ))}
              </div>
            </section>
          </div>
        </div>
      </nav>
    </div>
  </body>
</html>
